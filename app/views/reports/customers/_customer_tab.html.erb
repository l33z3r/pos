                <th class="header">Date</th>
                <th class="header">Time</th>
                <th class="header">Customer</th>
                <th class="header">Transaction</th>
                <th class="header">Ref. Number</th>
                <th class="header">Debit</th>
                <th class="header">Credit</th>
                <th class="header">Balance</th>
                </thead>


                <% last_balance = 0 %>
                <% last_id = 0 %>
                <% current_balance = 0 %>
                <% @orders.each_with_index do |week, i| %>

                    <% @customer = Customer.find_by_id(week.customer_id) %>


                    <tbody>

                    <tr>
                        <td style="text-align: left; ">
                            <%= week.created_at.strftime("%d/%m/%Y") %>
                        </td>
                        <td style="text-align: left;">
                            <%= week.created_at.strftime("%H:%M") %>
                        </td>
                        <td style="text-align: left;">
                            <%= @customer.name %>
                        </td>
                        <td style="text-align: left;">
                            <% if week.transaction_type == "settlement" %>Payment<% else %>Charge<% end %>
                        </td>
                        <td style="text-align: left; ">
                            <% if week.transaction_type == "charge" %><%= Order.find_by_id(week.order_id).order_num %><% end %>
                        </td>
                        <td style="text-align: right; ">
                            <% if week.transaction_type == "charge" %><% last_balance =  last_balance - week.abs_amount %><%= print_money(week.abs_amount) %><% end %>
                        </td>
                        <td style="text-align: right;">
                            <% if week.transaction_type == "settlement" %><% last_balance = last_balance + week.abs_amount %><%= print_money(week.abs_amount) %><% end %>
                        </td>

                        <% last_id = @customer.id %>
                        <% current_balance = @customer.current_balance.abs %>


                        <td style="text-align: right;">
                            <%= print_money(last_balance) %>
                        </td>

                    </tr>
                    <% if week == @orders.last %>
