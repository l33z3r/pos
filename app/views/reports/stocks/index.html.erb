<% @nav_title = "Reports - Stock" %>
<div id="reports_nav">
            <div class="report_tab" onclick="window.location = '/reports/glances'">
                At A Glance
            </div> <br>
            <div class="report_tab" onclick="window.location = '/reports/sales'">
               Sales
            </div> <br>
            <div class="report_tab selected" onclick="window.location = '/reports/stocks'">
                Stock
            </div>
</div>
<div id="reports_container">

    <div>



        <div>

            <div class="container" id="#at_a_glance_section">
                <div id="report_sales_filters" class="popout_dialog">
                    <div id="refine_container">
                        <div id="date_select_container">
                            <div class="dropdown_container">
                            <div class="label">Report Type</div>
                            <select id="search_type_select" onchange="setStockSearchType($(this).val())">
                                <option value="1">Stock by Product</option>
                                <option value="2">Stock by Category</option>
                            </select>
                        </div>
                            <div class="dropdown_container" style="margin-left: 40px;">
                                <div class="label">Terminal</div>
                                <select onchange="addTerminalFilter($(this).val())">
                                    <option value="">All Terminals</option>
                                    <% @all_terminals.each do |terminal_id| %>
                                        <option value="<%= terminal_id %>"><%= terminal_id %></option>
                                    <% end %>
                                </select>
                            </div>
                            <% lastyear = Time.now - 1.year %>
                            <% yesterday = Time.now - 1.day %>
                            <% lastweek = Time.now - 7.days %>
                            <% lastmonth = Time.now - 1.month %>
                            <% thirtydays = Time.now - 30.days %>
                            <% twoyears = Time.now.beginning_of_year - 2.years %>
                            <div class="dropdown_container">
                                <div class="label">Date</div>
                                <select id="date_preselect" onchange="setDateParams($(this).val(), true)" style="width: 120px">
                                    <option value="<%= Time.now.beginning_of_day.strftime("%Y-%m-%d %H:%M") %>,<%= Time.now.end_of_day.strftime("%Y-%m-%d %H:%M") %>">Today</option>
                                    <option value="<%= yesterday.beginning_of_day.strftime("%Y-%m-%d %H:%M") %>,<%= yesterday.end_of_day.strftime("%Y-%m-%d %H:%M") %>">Yesterday</option>
                                    <option value="<%= Time.now.beginning_of_week.strftime("%Y-%m-%d %H:%M") %>,<%= Time.now.strftime("%Y-%m-%d %H:%M") %>">This Week</option>
                                    <option value="<%= Time.now.beginning_of_month.strftime("%Y-%m-%d %H:%M") %>,<%= Time.now.strftime("%Y-%m-%d %H:%M") %>">This Month
                                    </option>
                                    <option value="<%= Time.now.beginning_of_year.strftime("%Y-%m-%d %H:%M") %>,<%= Time.now.strftime("%Y-%m-%d %H:%M") %>">This Year to Date
                                    </option>
                                    <option value="<%= lastweek.beginning_of_week.strftime("%Y-%m-%d %H:%M") %>,<%= yesterday.end_of_week.strftime("%Y-%m-%d %H:%M") %>">Last
                                        Week
                                    </option>
                                    <option selected="yes" value="<%= thirtydays.strftime("%Y-%m-%d %H:%M") %>,<%= Time.now.strftime("%Y-%m-%d %H:%M") %>">Last 30
                                        Days
                                    </option>
                                    <option value="<%= lastmonth.beginning_of_month.strftime("%Y-%m-%d %H:%M") %>,<%= lastmonth.end_of_month.strftime("%Y-%m-%d %H:%M") %>">Last
                                        Month
                                    </option>
                                    <option value="<%= lastyear.beginning_of_day.strftime("%Y-%m-%d %H:%M") %>,<%= lastyear.end_of_day.strftime("%Y-%m-%d %H:%M") %>">This Day
                                        Last Year
                                    </option>
                                    <option value="<%= twoyears.beginning_of_day.strftime("%Y-%m-%d %H:%M") %>,<%= Time.now.beginning_of_day.strftime("%Y-%m-%d %H:%M") %>">All Time</option>
                                    <option value=""></option>
                                </select>
                            </div>
                            <div id="days">
                                <div class="dropdown_container">
                                    <div class="label">Date From</div>
                                    <div class="input_date">
                                        <input type="text" size="13" id="date_from" name="date_from"
                                               value="<%= @selected_from_date.to_date.strftime("%d-%m-%Y") %>"/>
                                    </div>
                                </div>
                                <div class="dropdown_container">
                                    <div class="label">Date To</div>
                                    <div class="input_date">
                                        <input type="text" size="13" id="date_to" name="date_to"
                                               value="<%= @selected_to_date.to_date.strftime("%d-%m-%Y") %>"/>
                                    </div>
                                </div>
                            </div>
                            <div class="clear">&nbsp;</div>
                        </div>
                        <div id="date_select_container">

                            <%= render 'category_dropdown' %>

                            <div id="product_dropdown" >
                                <%= render 'product_dropdown' %>
                            </div>
                            <div class="clear">&nbsp;</div>
                        </div>
                    </div>
                    <div id="refine_button_stock">
                        <div onclick="runStocksSearch()" class="wide_button">Update</div>
                    </div>


                    <div style="float: right; margin-top: 10px; margin-right: 10px;">
                        <div style="margin: 5px; height: 40px;" onclick="switchView('graph')" id="graph_view" class="button selected">Graph View</div>
                    </div>
                    <div style="float: right; margin-top: 10px; margin-right: 10px;">
                        <div style="margin: 5px; height: 40px;" onclick="switchView('table')" id="table_view" class="button">Table View</div>
                    </div>
                </div>
                <div id="report_stocks_results">
                    <%= render 'stocks_tab' %>
                </div>


            </div>


        </div>
    </div>

</div>