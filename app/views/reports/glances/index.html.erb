<% @nav_title = "Reports - At a Glance" %>
<div id="reports_nav">
    <div class="report_tab selected" onclick="window.location = '/reports/glances'">
        At a Glance
    </div>
    <br>
    <div class="report_tab" onclick="window.location = '/reports/sales'">
        Sales
    </div>
    <br>

    <div class="report_tab" onclick="window.location = '/reports/stocks'">
        Products
    </div>
    <br>

    <div class="report_tab" onclick="window.location = '/reports/payments'">
        Payments
    </div>
    <br>
    <div class="report_tab" onclick="window.location = '/reports/staff'">
        Staff
    </div>
</div>
<div id="reports_container">



      <div>

        <div>

            <div id="at_a_glance_filters" class="popout_dialog">
               <div id="date_select_container">
                  <div class="dropdown_container">
                    <div class="label">Terminal</div>
                    <select onchange="addTerminalFilter($(this).val())">
                      <option value="">All Terminals</option>
                      <% @all_terminals.each do |terminal_id|%>
                          <option value="<%= terminal_id %>"><%= terminal_id %></option>
                      <% end %>
                    </select>
                  </div>

                  <div class="dropdown_container">
                    <div class="label">Date</div>
                    <select onchange="setGlancesSearchType($(this).val())">
                      <option value="1">Today</option>
                      <option value="2">Yesterday</option>

                    </select>
                  </div>
                 <div id="days">

                 </div>
                 <div id="glances_refine_button">
                        <div onclick="setReportParams();runGlancesSearch()" class="button" style="height:38px">Update</div>
                    </div>

                  <div class="clear">&nbsp;</div>
                </div>
            </div>

            <div id="at_a_glance_results">
                <% if @today_sales != nil %>
                <%= render 'glances_tab' %>
                <% end %>
            </div>





        </div>



      </div>
    </div>

</div>

<script type="text/javascript">
    window.onload = function() {
    runGlancesSearch();
}
</script>