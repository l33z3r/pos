<div id="add_note_screen">
  <div id="header">

    <div id="back_button" class="small_button" onclick="hideAndroidKeyboard(); showChargeNotePopup();">Charge</div>

    <div class="title">Add Note</div>

    <div id="options_button" class="small_button" onclick="hideAndroidKeyboard();doSaveNote();">OK</div>

    <div class="clear">&nbsp;</div>
  </div>
  <div id="keypad_container">
    <div class="clear">&nbsp;</div>
      <input type="text" class="note_input">

  </div>
</div>



<div id="add_charge_screen">
  <div id="header_charge">

      <div id="back_button_charge" class="small_button" onclick="showAddNotePopup();">Back</div>

    <div id="title">Add Note</div>

    <div id="options_button_charge" class="small_button" onclick="setNewCharge($('.note_charge').val());showAddNotePopup();">OK</div>

    <div class="clear">&nbsp;</div>
  </div>

  <div class="keypad_container">

    <div class="clear">&nbsp;</div>

    <div id="entered_table_number_container">
       <input type="number" class="note_charge"/>

      Charge to Note <input type="text" class="display_charge"/>
    </div>

    <div id="keypad" class="keypad">
      <div id="keys" class="price_keys">
        <% [[7,9],[4,6],[1,3]].each do |x,y| %>
          <% (x..y).each do |num| %>
            <div id="num_<%= num %>" class="key" onclick="chargeNumberSelectKeypadClick(<%=num%>)"><%= num %></div>
          <% end %>
        <% end %>

        <div id="num_0" class="key" onclick="chargeNumberSelectKeypadClick('0')">0</div>
        <div id="num_00" class="key" onclick="chargeNumberSelectKeypadClick('00')">00</div>
        <div class="cancel_key" class="key" onclick="doCancelchargeNumberSelectKeypad()">C</div>
      </div>
    </div>
  </div>
</div>


