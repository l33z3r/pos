<div id="pin_screen">
  <div id="header">
    <div class="title">Enter Pin</div>

    <div class="clear">&nbsp;</div>
  </div>

  <div id="pin_keypad_container">
    
    <div class="clear">&nbsp;</div>
    
    <div id="entered_pin_number_container">
      <div id="pin_number_show"></div>
      <%= hidden_field_tag :pin_num, nil, :id => :pin_num, :size => "18" %>
    </div>

    <div id="pin_keypad" class="keypad">
      <div id="pin_keys" class="keys">
        <% [[7,9],[4,6],[1,3]].each do |x,y| %>
          <% (x..y).each do |num| %>
            <div id="num_<%= num %>" class="key" onclick="pinKeypadClick(<%=num%>)"><%= num %></div>
          <% end %>
        <% end %>
        <div class="pin_cancel_key" class="key" onclick="doCancelPinNumberSelectKeypad()">C</div>
        <div id="pin_num_0" class="key" onclick="pinKeypadClick(0)">0</div>
        <div class="go_key" class="key" onclick="doSubmitPinNumber();">OK</div>
      </div>
    </div>
  </div>
</div>