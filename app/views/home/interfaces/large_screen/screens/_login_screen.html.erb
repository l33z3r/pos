<div id="landing" style="display: none;">

  <div id="login_receipt_keypad_container">

    <div id="login_receipt_header"></div>

    <div id="login_receipt" class="receipt">
      <div id="login_till_roll" class="till_roll"></div>
    </div>
    
    <div id="entered_code_container">
        <div id="num_container"><%= password_field :num, nil, :id => :num, :size => "18", :onKeyPress=>"loginScreenKeyboardClick(event)" %></div>
    </div>

    <div id="keypad" class="keypad">
      <div id="keys" class="keys">
        <% [[7,9],[4,6],[1,3]].each do |x,y| %>
          <% (x..y).each do |num| %>
            <div id="num_<%= num %>" class="key" data-onpress="loginScreenKeypadClick(<%=num%>)"><%= num %></div>
          <% end %>
        <% end %>

        <div class="cancel_key" class="key" data-onpress="doCancelLoginKeypad()">C</div>
        <div id="num_0" class="key" data-onpress="loginScreenKeypadClick(0)">0</div>
        <div class="go_key" class="key" data-onpress="doLogin($('#num').val())">OK</div>
      </div>
    </div>
  </div>

  <div id="active_users_buttons_container">
    <div id="active_users">
      <%= render :partial => "/home/interfaces/large_screen/active_employees" %>
    </div>

    <div class="clear_spacer">
      <div id="login_screen_status_message_container" class="global_status_message_container">
        <div id="login_screen_status_message" class="global_status_message"></div>
      </div>
    </div>

    <div class="buttons">
      <div id="login_screen_button_clock_in" class="button" data-onpress="doClockin()">
        <div class="icon">
          <%= image_tag "button_logos/clock_in.png", :alt => nil %>
        </div>
        <div class="button_name">Clock In</div>
      </div>

      <div id="login_screen_button_clock_out" class="button" data-onpress="doClockout()">
        <div class="icon">
          <%= image_tag "button_logos/clock_out.png", :alt => nil %>
        </div>
        <div class="button_name">Clock Out</div>
      </div>
      
      <div id="login_screen_button_receipt" class="button" data-onpress="printLastReceipt()">
        <div class="icon">
          <%= image_tag "/images/button_logos/print_receipt_button.png" %>
        </div>
        <div class="button_name">Print Receipt</div>
      </div>
      
      <div id="login_screen_button_tax_receipt" class="button" data-onpress="printLastReceiptWithVat()">
        <div class="icon">
          <%= image_tag "/images/button_logos/print_receipt_button.png" %>
        </div>
        <div class="button_name">Print <%=@tax_label%> Receipt</div>
      </div>
    </div>

    <div class="clear">&nbsp;</div>
  </div>

  <div class="clear">&nbsp;</div>
</div>