<div id="split_bill_screen">
  <div id="split_bill_receipt_keypad_container">
    <div id="split_bill_from_receipt_container">

      <div id="split_bill_from_receipt_header"></div>

      <div id="split_bill_from_receipt_content_container">
        <div id="split_bill_from_receipt" class="receipt">
          <div id="split_bill_from_till_roll" class="till_roll"></div>
          <div class="clear">&nbsp;</div>
        </div>
      </div>
    </div>

    <div class="clear">&nbsp;</div>

    <div id="split_bill_keypad_input">
      <div id="split_bill_input_show"></div>
    </div>

    <div id="split_bill_keypad" class="keypad">
      <div id="split_bill_keys" class="keys">
        <% [[7,9],[4,6],[1,3]].each do |x,y| %>
          <% (x..y).each do |num| %>
            <div id="split_bill_keypad_num_<%= num %>" class="key" data-onpress="splitBillScreenKeypadClick(<%=num%>);"><%= num %></div>
          <% end %>
        <% end %>

        <div id="split_bill_keypad_num_0" class="key" data-onpress="splitBillScreenKeypadClick(0);">0</div>
        <div id="split_bill_decimal_key" class="key" data-onpress="splitBillScreenKeypadClickDecimal();">.</div>
        <div id="split_bill_cancel_key" class="key" data-onpress="splitBillScreenKeypadClickCancel()">C</div>
      </div>
    </div>
  </div>

  <div id="split_bill_to_receipt_container">

    <div id="split_bill_to_receipt_content_container">
      <div id="split_bill_to_receipt_header">New Bill</div>

      <div id="split_bill_to_receipt">
        <div id="split_bill_to_receipt" class="receipt">
          <div id="split_bill_to_till_roll" class="till_roll"></div>
          <div class="clear">&nbsp;</div>
        </div>
      </div>
      
      <div class="action_buttons_container">
      <div class="action_buttons">
        <div id="cancel_button" class="button" data-onpress="cancelSplitBillMode()">
          <div class="icon">
            <%= image_tag "button_logos/cancel_button.png"%>
          </div>
          <div class="button_name">Cancel</div>
        </div>
        <div id="save_button" class="button" data-onpress="finishSplitBillMode()">
          <div class="icon">
            <%= image_tag "button_logos/ok_button.png"%>
          </div>
          <div class="button_name">OK</div>
        </div>
        <div class="clear">&nbsp;</div>
      </div>
    </div>
    </div>
  </div>
</div>