<div id="total_screen">
  <div id="totals_receipt">

    <div id="totals_total_container">
      <div id="totals_label">Total Amount Due:</div>
      <div id="totals_total_value"></div>
      <div class="clear">&nbsp;</div>
    </div>

    <div id="totals_tendered_container">
      <div id="tendered_label">Cash Tendered:</div>
      <div id="totals_tendered_value">â‚¬</div>
      <div class="clear">&nbsp;</div>
    </div>

    <div id="change_container">
      <div id="change_label">Change:</div>
      <div id="totals_change_value"></div>
      <div class="clear">&nbsp;</div>
    </div>

  </div>

  <div id="totals_keypad">
    <div id="keys">
      <% [[7,9],[4,6],[1,3]].each do |x,y| %>
        <% (x..y).each do |num| %>
          <div id="totals_keypad_num_<%= num %>"><%= num %></div>
        <% end %>
      <% end %>

      <div id="totals_keypad_num_0">0</div>
      <div id="totals_decimal_key">.</div>
      <div id="totals_cancel_key" onclick="doCancelTotalsKeypad()">C</div>
    </div>

    <div class="clear">&nbsp;</div>

    <div id="tendered_button" onclick="takeTendered()">OK</div>
    <div id="finish_sale_button" style="display: none;" onclick="doTotalFinal()">Finish Sale</div>
  </div>

</div>