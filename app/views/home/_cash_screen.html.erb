<div id="total_screen">
 
  <div id="totals_receipt">

    <div id="totals_receipt">
      <div id="totals_till_roll">

      </div>
    </div>
    
    <div id="totals_tendered_container">
      <div id="tendered_label">Cash Tendered:</div>
      <div id="totals_tendered_value"></div>
      <div id="currency_symbol"><%= GlobalSetting.parsed_setting_for GlobalSetting::CURRENCY_SYMBOL %></div>
      <div class="clear">&nbsp;</div>
    </div>

    <div id="change_container">
      <div id="change_label">Change:</div>
      <div id="totals_change_value"></div>
      <div id="currency_symbol"><%= GlobalSetting.parsed_setting_for GlobalSetting::CURRENCY_SYMBOL %></div>
      <div class="clear">&nbsp;</div>
    </div>

    <div id="payment_method">
      <div id="payment_method_label">Payment Method:</div>
      <div id="payment_method_values">
        <% GlobalSetting.accepted_payment_methods.each do |pm| %>
        <% next if pm == "credit_card" %>
          <div class="value">
            <input type="radio" name="payment_method" value="<%=pm%>" <%=pm == "cash" ? "checked" : "" %>/><%=pm.titleize%>
          </div>
          <div class="clear">&nbsp;</div>
        <% end %>
      </div>

      <div class="clear_top_margin_10">&nbsp;</div>

      <div id="card_type_label">Credit Cards:</div>
      <div id="card_type_values">
        <% GlobalSetting.accepted_card_types.each do |pm| %>
          <div class="value">
            <input type="radio" name="payment_method" value="<%=pm%>"/><%=pm.titleize%>
          </div>
          <div class="clear">&nbsp;</div>
        <% end %>
      </div>
    </div>

  </div>

  <div id="totals_keypad">
    <div id="keys">
      <% [[7,9],[4,6],[1,3]].each do |x,y| %>
        <% (x..y).each do |num| %>
          <div id="totals_keypad_num_<%= num %>"><%= num %></div>
        <% end %>
      <% end %>

      <div id="totals_keypad_num_0">0</div>
      <div id="totals_decimal_key">.</div>
      <div id="totals_cancel_key" onclick="doCancelTotalsKeypad()">C</div>
    </div>

    <div class="clear">&nbsp;</div>

    <div id="tendered_button" onclick="takeTendered()">OK</div>
    <div id="finish_sale_button" style="display: none;" onclick="doTotalFinal()">Finish Sale</div>
  </div>

</div>