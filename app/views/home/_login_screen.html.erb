<div id="landing" style="display: none;">

  <div id="login_receipt_keypad_container">

    <div id="login_receipt_header">Last Sale</div>

    <div id="login_receipt">
      <div id="login_till_roll">
        
      </div>
    </div>

    <div class="clear_blue_spacer">&nbsp;</div>

    <div id="keypad">
      <div id="keys">
        <% [[7,9],[4,6],[1,3]].each do |x,y| %>
          <% (x..y).each do |num| %>
            <div id="num_<%= num %>"><%= num %></div>
          <% end %>
        <% end %>

        <div class="pad">&nbsp;</div>
        <div id="num_0">0</div>
        <div class="cancel_key" onclick="doCancelLoginKeypad()">C</div>
      </div>
    </div>
  </div>

  <div id="active_users_credentials_container">
    <div id="active_users">
      <%= render :partial => "active_employees" %>
    </div>

    <div id="login_credentials">
      <span>Clock In Code:</span>

      <div id="clockincode_show"></div>
      
      <%= hidden_field_tag :num, nil, :id => :num, :size => "18" %>
      
      <!-- this one is for the login popup box -->
      <%= hidden_field_tag :passcode, nil, :id => :passcode, :size => "18" %>

      <div class="login" onclick="doClockin($('#num').val());return false;">Clock In</div>
      <div class="login" onclick="doClockout($('#num').val());return false;">Clock Out</div>
    </div>
    <div class="clear">&nbsp;</div>
  </div>

  <div class="clear">&nbsp;</div>
</div>