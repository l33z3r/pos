<!DOCTYPE html>
<html>
  <head>
    <style type="text/css" media="all">
      @page {
        margin: 0px;
        padding: 0px;
      }

      body {
        font-family: verdana, sans-serif;
        font-size: 9px;
        width: 210px;
        margin: 0px;
        overflow: hidden;

        <%= render "/partials/interfaces/shared/receipt_margins_css_#{@order_receipt_width_setting}" %>
      }

      body * {
        overflow: hidden;
      }

      div.clear {
        height: 1px;
        clear: both;
      }

      div.clear_top_margin_10 {
        height: 5px;
        clear: both;
      }

      div.clear_top_margin_10_bottom_border {
        height: 5px;
        clear: both;
      }

      div.the_dots {
        text-align: center;
        margin-bottom: 5px;
      }

      div.business_info {
        width: 190px;
      }

      div.business_info {
        text-align: center;
        font-weight: bold;
        margin: auto;
      }

      div.data_table {
        margin: 10px 0px;
      }

      div.data_table div.label {
        float: left;
        text-align: left;
        width: 92px;
      }

      div.data_table div.data {
        float: left;
        text-align: right;
        padding-right: 3px;
        width: 106px;
        font-weight: bold;
      }

      div.data_table div.label.time {
        width: 93px;
      }

      div.data_table div.data.time {
        width: 106px;
        padding-right: 0px;
      }

      div.terminal {
        float: left;
        font-weight: bold;
        width: 112px;
        text-align: right;
      }

      div.order_line {
        margin: 0px 2px;
      }

      div.order_line.course {

      }

      div.order_line.hide_on_printed_receipt {
        display: none;
      }

      div.order_line div.discount {
        float: left;
        width: 190px;
      }

      div.order_line div.discount_complimentary {
        clear: both;
        margin-left: 60px;
        margin-top: 10px;
      }

      div.amount {
        float: left;
        text-align: left;
        width: 26px;
        margin-left: 3px;
      }

      div.name {
        float: left;
        width: 130px;
        text-align: left;
      }

      div.total {
        float: left;
        width: 35px;
        text-align: right;
      }

      div.modifier_name {
        float: left;
        width: 125px;
        margin-left: 30px;
        text-align: left;
      }

      div.modifier_price {
        float: left;
        width: 40px;
        text-align: right;
      }

      /* need to force a height so it prints correctly */
      div.oia {
        float: left;
      }

      div.oia.hide_on_receipt {
        visibility: hidden;
        height: 0px;
      }

      div.oia_add {
        float: left;
        width: 40px;
        text-align: right;
      }

      div.oia_name {
        float: left;
        width: 104px;
        margin-left: 10px;
        text-align: left;
      }

      div.oia_name.note {
        font-style: italic;
        width: 134px;
        margin-left: 20px
      }

      div.oia_price {
        float: left;
        width: 40px;
        text-align: right;
      }

      div.discount div.header {
        float: left;
        width: 100px;
        text-align: right;
        font-style: italic;
      }

      div.discount div.discount_amount {
        float: left;
        width: 47px;
        margin-right: 3px;
        text-align: right;
        font-style: italic;
      }

      div.discount div.new_price {
        float: left;
        width: 35px;
        text-align: left;
        font-style: italic;
      }

      div#receipt_message {
        text-align: center;
        margin-bottom: 5px;
      }

      /* x/z total receipt css */

      div#reports_center_till_roll {
        text-align: center;
      }

      div#cash_totals_data_table div#cash_totals_data_table_header_section {
        margin: 20px 0px;
        text-align: center;
      }

      div#cash_totals_data_table div#cash_totals_data_table_header_section div.business_name {
        font-weight: bold;
        font-size: 13px;
      }

      div#cash_totals_data_table div#cash_totals_data_table_header_section div.business_address {
        font-size: 13px;
      }

      div#cash_totals_data_table div#cash_totals_data_table_header_section div.business_telephone {
        font-size: 13px;
      }

      div#cash_totals_data_table div#cash_totals_data_table_header_section div.business_email_address {
        font-size: 13px;
      }

      div#cash_totals_data_table div.data_table_header {
        font-weight: bold;
        font-size: 14px;
        margin: 3px;
        margin-top: 15px;
        text-align: center;
      }

      div#cash_totals_data_table div.data_table {
        margin-top: 10px;
      }

      div#cash_totals_data_table div.data_table div.label {
        float: left;
        text-align: left;
        width: 92px;
      }

      div#cash_totals_data_table div.data_table div.data {
        float: left;
        text-align: right;
        width: 109px;
      }

      div#cash_totals_data_table div.totals_data_table {
        margin-top: 5px;
      }

      div#cash_totals_data_table div.totals_data_table div.totals_label {
        float: left;
        text-align: left;
        width: 92px;
        font-weight: bold;
      }

      div#cash_totals_data_table div.totals_data_table div.totals_data {
        float: left;
        text-align: right;
        width: 109px;
      }

      div.vat_breakdown div.header {
        text-align: left;
        font-weight: bold;
      }

      div.vat_breakdown div.footer {
        font-weight: bold;
        margin-top: 10px;
        text-align: left;
      }

      div#cash_totals_data_table div.taxes_data_table {
        margin-top: 10px;
      }

      div#cash_totals_data_table div.taxes_data_table div.taxes_data_table_header {
        width: 50px;
        float: left;
        text-align: right;
      }

      div#cash_totals_data_table div.taxes_data_table div.taxes_data_table_label_header {
        width: 50px;
        float: left;
        text-align: left;
      }

      div#cash_totals_data_table div.taxes_data_table div.taxes_label {
        float: left;
        text-align: left;
        width: 50px;
        font-weight: bold;
      }

      div#cash_totals_data_table div.taxes_data_table div.taxes_data {
        float: left;
        text-align: right;
        width: 50px;
      }

      div#cash_totals_data_table div.taxes_totals_data_table {
        margin-top: 5px;
      }

      div#cash_totals_data_table div.taxes_totals_data_table div.taxes_totals_label {
        float: left;
        text-align: left;
        width: 50px;
        font-weight: bold;
      }

      div#cash_totals_data_table div.taxes_totals_data_table div.taxes_totals_data {
        float: left;
        text-align: right;
        width: 50px;
      }

      div#cash_totals_data_table div.products_data_table {
        margin-top: 10px;
      }

      div.products_data_table div.products_data_table_header {
        font-weight: bold;
        width: 58px;
        float: left;
        text-align: right;
      }

      div.products_data_table div.products_data_table_header.quantity {
        width: 25px;
      }

      div#cash_totals_data_table div.products_data_table div.products_data_table_label_header {
        font-weight: bold;
        width: 117px;
        float: left;
        text-align: left;
      }

      div#cash_totals_data_table div.products_data_table div.products_label {
        float: left;
        text-align: left;
        width: 117px;
      }

      div#cash_totals_data_table div.products_data_table div.products_data {
        float: left;
        text-align: right;
        width: 58px;
      }

      div#cash_totals_data_table div.products_data_table div.products_data.quantity {
        width: 25px;
      }

      /* Settings for order receipt */

      div.order_receipt div.oia.hide_on_receipt {
        visibility: visible;
      }

      <%= render "/partials/interfaces/shared/order_receipt_css_#{@order_receipt_width_setting}" %>
    </style>    
  </head>
  <body id="print_receipt_content">
    <div id="print_receipt_wrapper">
      <div id="print_receipt" class="receipt">
        <div id="till_roll" class="till_roll"></div>
      </div>
    </div>

  </body>
</html>
