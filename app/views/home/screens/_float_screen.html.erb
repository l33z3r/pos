<div id="float_screen" style="display: none;">

  <div id="receipt_keypad_container">

    <div id="float_receipt_header">Float</div>

    <div id="float_receipt" class="receipt">
      <div id="float_till_roll" class="till_roll"></div>
    </div>

    <div class="clear">&nbsp;</div>

    <div id="float_keypad" class="keypad">
      <div id="float_keys" class="keys">
        <% [[7,9],[4,6],[1,3]].each do |x,y| %>
          <% (x..y).each do |num| %>
            <div id="float_keypad_num_<%= num %>" class="key" onclick="floatScreenKeypadClick(<%= num %>)"><%= num %></div>
          <% end %>
        <% end %>

        <div id="float_keypad_num_0" class="key" onclick="floatScreenKeypadClick(0)">0</div>
        <div id="float_decimal_key" class="key" onclick="floatScreenKeypadClick('.')">.</div>
        <div id="float_cancel_key" class="key" onclick="floatScreenKeypadClickCancel()">C</div>
      </div>

      <div class="clear">&nbsp;</div>

    </div>
  </div>

  <div id="coin_counter_container">
    <div id="coin_counter">
      <div id="coin_counter_popout" class="popout_dialog">
        <div id="coin_counter_header" class="header">
          Add Float
        </div>

        <div class="clear_top_margin_10">&nbsp;</div>

        <div id="float_coin_counter_widget_container"></div>

        <div class="action_buttons">
          <div class="button" onclick="cancelFloatCoinCount()">
            <div class="icon">
              <%= image_tag "button_logos/cancel_button.png" %>
            </div>
            <div class="button_name">Cancel</div>
          </div>

          <div id="tendered_button" class="button" onclick="saveFloatCoinCount()">
            <div class="icon">
              <%= image_tag "button_logos/ok_button.png" %>
            </div>
            <div class="button_name">Ok</div>
          </div>
        </div>
      </div>
    </div>

    <div class="clear">&nbsp;</div>
  </div>
</div>