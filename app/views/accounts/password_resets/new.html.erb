<%- @hide_header_logo = true %>

<div id="forgot_password_page">
  <div id="left_column">
    <%= image_tag "accounts/header_logo.png", :class => "cluey_logo" %>

    <div id="girl_1_container">
      <%= image_tag "accounts/girl_1.png", :class => "girl_1" %>
    </div>
  </div>

  <div id="right_column">
    <div id="header_1">
      Forgotten Password For Account: <%= @cluey_account.name %>
    </div>

    <div id="explain">Enter your email address below.</div>

    <%= form_tag accounts_password_resets_path, :method => :post do %>
      <div id="fields_container">
        <div class="field">
          <div class="label">Email Address:</div>
          <%= text_field_tag :email, params[:email] %>
          <div class="clear">&nbsp;</div>
        </div>       

        <div class="submit">
          <input type="submit" class="big_blue_button_1" value="RESET PASSWORD"/>
        </div>

      </div>
    <% end %>

  </div>

  <div class="clear">&nbsp;</div>

</div>