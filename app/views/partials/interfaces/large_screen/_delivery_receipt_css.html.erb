div.delivery_till_roll div.delivery_till_roll_heading {
    font-weight: bold;
    font-size: 155%;
    margin-bottom: 5px;
    text-align: center;
}

div.delivery_till_roll div.delivery_till_roll_header div.amount_header, 
div.delivery_till_roll div.delivery_till_roll_header div.product_header,
div.delivery_till_roll div.delivery_till_roll_header div.cost_header {
    font-weight: bold;
}

div.delivery_till_roll div.delivery_line {
    margin: 0px 2px;
    cursor: pointer;
}

div.delivery_till_roll div.delivery_line.return {
    margin: 0px 2px;
    cursor: pointer;
}

div.delivery_till_roll div.delivery_line.return div.return_word {
    margin-top: 2px;
    float: left;
    font-weight: bold;
}

div.delivery_till_roll div.delivery_till_roll_header {
    margin-bottom: 6px;
}

div.delivery_till_roll div.delivery_till_roll_header div.nickname {
    margin-left: 3px;
    float: left;
    font-weight: bold;
    text-align: left;
    width: 47%;
}

div.delivery_till_roll div.delivery_till_roll_header div.reference_number {
    font-weight: bold;
    text-align: center;
    width: 99%;
    font-size: 13px;
}

div.delivery_till_roll div.delivery_till_roll_header div.timestamp {
    float: left;
    font-weight: bold;
    text-align: right;
    width: 47%;
}

div.delivery_till_roll div.delivery_till_roll_header div.amount_header,
div.delivery_till_roll div.amount {
    width: 12%;
    float: left;
    text-align: left;
    margin-left: 3px;
}

div.delivery_till_roll div.delivery_till_roll_header div.product_header,
div.delivery_till_roll div.product_name {
    width: 61%;
    text-align: left;
    float: left;
}

div.delivery_till_roll div.delivery_till_roll_header div.cost_header,
div.delivery_till_roll div.cost_price {
    float: left;
    width: 16%;
    text-align: right;
}

div.delivery_till_roll div.note {
    text-align: left;
    width: 71%;
    margin-left: 35px;
    font-weight: bold;
}

div.delivery_till_roll div.total_label {
    float: left;
    font-weight: bold;
    font-size: 13px;
    text-align: left;
    width: 47%;
}

div.delivery_till_roll div.total_value {
    float: left;
    font-weight: bold;
    font-size: 13px;
    text-align: right;
    width: 47%;
}