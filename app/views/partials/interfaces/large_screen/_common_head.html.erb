<title>Pos</title>

<%= stylesheet_links "shared/", "interfaces/large_screen/", :recursive => true, :cache => "cache/large_screen_styles" %>

<!-- load the dynamic theme -->
<link type="text/css" href="<%= admin_custom_theme_path(:format => :css) %> " media="screen" rel="stylesheet" />

<%= render "/partials/shared_js_includes" %>

<!-- application specific js -->
<%= javascript_include_tag "rails", "interfaces/large_screen/application", 
  "interfaces/large_screen/menu", "interfaces/large_screen/util", 
  "interfaces/large_screen/receipt_html_functions", "interfaces/large_screen/login_functions", 
  "interfaces/large_screen/cash_reports", "interfaces/large_screen/cash_screen", 
  "touch/touch_util", "touch/on_touch_click_replace", "screen_button_functions", :cache => "cache/large_screen" %>

<!-- Modal Popups (http://www.modalpopups.com) -->
<%= javascript_include_tag 'plugins/modal-popups/shCore', 'plugins/modal-popups/ModalPopups',
  'plugins/modal-popups/shBrushJScript' %>

<%= csrf_meta_tag %>

<!-- must set some vars from the system settings -->
<%= render :partial => "/partials/js_global_settings" %>

<%= yield :head %>

<!-- disable the double tap to zoom -->
<meta name="viewport" content="user-scalable=0;" />

<% if Rails.env.development?  %>
  <meta http-equiv="pragma" content="no-cache"/>
<% end %>