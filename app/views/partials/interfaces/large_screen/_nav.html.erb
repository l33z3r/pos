<nav id="main_nav">

  <div id="nav_back_link" style="display: none;">< Back</div>
  <div id="admin_nav_back_link" style="display: none;" onclick="history.go(-1);">< Back</div>

  <div id="business_name"><%=@business_name%></div>
  <div id="e_name" <%= session[:current_employee_nickname] ? "" : "style='display: none;'" %>><%= session[:current_employee_nickname] %></div>
  <div id="terminal_id"><%= @terminal_id %></div>
  <div id="date"></div>
  <div id="clock"></div>
  <div id="cache_status" style="display: none;"></div>

  <script type="text/javascript">
    $(function(){initNavTitle("<%=@nav_title%>");});
  </script>

  <div id="nav_title"></div>

  <div id="loading_orders_spinner">
    <%= image_tag "spinner.gif" %>
  </div>

  <div style="display: none;" id="nav_save_button" onclick="doLogout();">
    <%= image_tag "exit.gif" %>
  </div>

  <div class="nav_util_button" onclick="toggleFullScreen();">
    <%= image_tag "button_logos/fullscreen.png" %>
  </div>

  <div id="connection_status">&nbsp;</div>

  <div class="nav_util_button" id="nav_util_button_clear_reload" onclick="doClearAndReload();">
    <%= image_tag "button_logos/clear_refresh.png" %>
  </div>

  <div class="nav_util_button" id="nav_util_button_reset_timestamp" onclick="resetOrderTimestamp();">
    <%= image_tag "button_logos/reset_order_timestamp.png" %>
  </div>

  <div class="nav_util_button" id="nav_util_button_reload" onclick="refreshClicked();">
    <%= image_tag "button_logos/refresh.png" %>
  </div>

  <div class="nav_util_button" onclick="toggleUtilKeyboard();">
    <%= image_tag "button_logos/keyboard.png" %>
  </div>

  <!--dropdown menu -->
  <div id="menu_screen_shortcut_dropdown_container">
    <div id="menu_screen_shortcut_dropdown_input" onclick="menuScreenShortcutSelectMenu.openMenu()"></div>

    <ul id="menu_screen_shortcut_dropdown" class="mcdropdown_menu">
      <li>
        Change Menu
        <ul>
          <% current_outlet.displays.all.each do |display| %>
            <li rel="1-<%= display.id %>">              
              <%= @display.id == display.id ? "* " : "" %>
              <%= display.name %>
            </li>
          <% end %>
        </ul>
      </li>
      <li>
        Price Level
        <ul id="price_levels">
          <li rel="2-1">Standard</li>
          <li rel="2-2"><%= GlobalSetting.parsed_setting_for GlobalSetting::PRICE_LEVEL_LABEL, current_outlet, {:price_level => 2} %></li>
          <li rel="2-3"><%= GlobalSetting.parsed_setting_for GlobalSetting::PRICE_LEVEL_LABEL, current_outlet, {:price_level => 3} %></li>
          <li rel="2-4"><%= GlobalSetting.parsed_setting_for GlobalSetting::PRICE_LEVEL_LABEL, current_outlet, {:price_level => 4} %></li>
        </ul>
      </li>
      <li id="change_prices_dropdown_option" rel="3">Change Prices</li>
      <li rel="4">Check Stock</li>
      <li rel="5">Edit Specials</li>
      <li rel="6">Add Product</li>
      <li rel="7">Current Orders</li>
      <li rel="8">Add Customer</li>
      <li rel="9">Receive Delivery</li>
      <li rel="10">Pay Expense</li>
    </ul>
  </div>

  <div class="clear">&nbsp;</div>
</nav>