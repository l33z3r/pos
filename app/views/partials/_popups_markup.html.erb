<%= render "/home/modifier_category_popups" %>

<div id="edit_receipt_item_popup_markup">
  <div id="edit_receipt_item_popup_markup_container">

    <div id="header">Edit Order Item</div>

    <div id="discount_button" class="button" onclick="showDiscountPopup(this)">Discount</div>
    <div id="delete_button" class="button" onclick="removeOrderItem(this)">Delete</div>

    <div class="clear">&nbsp;</div>

    <div id="quantity_editor">

      <div id="quantity_label">Quantity:</div>
      <input type="text" class="quantity" size="2" id="current_selected_receipt_item_quantity"/>

      <div id="buttons_container">
        <div id="plus_button" class="button" onclick="editOrderItemIncreaseQuantity(this)"><div>+</div></div>
        <div id="minus_button" class="button" onclick="editOrderItemDecreaseQuantity(this)"><div>-</div></div>
      </div>
      <div class="clear">&nbsp;</div>
    </div>

    <div class="clear">&nbsp;</div>

    <div id="price_editor">
      <div class="price_label">Price Per Unit:</div>
      <input type="text" class="price" size="2" id="current_selected_receipt_item_price"/>
      <div class="clear">&nbsp;</div>
    </div>

    <div class="clear">&nbsp;</div>

    <div id="cancel_button" class="button" onclick="closeEditOrderItem()">Cancel</div>
    <div id="save_button" class="button" onclick="saveEditOrderItem(this)">Save</div>
  </div>
</div>

<div id="discounts_popup_markup">
  <div id="discounts_popup_markup_container">

    <div class="header">Apply Discount</div>

    <div class="clear">&nbsp;</div>

    <div class="discount_buttons">
      <div class="button" id="discount_button_0" onclick="setDiscountVal(0)">
        <div class="name">
          None
        </div>
        <div class="percent">
          0%
        </div>
      </div>
      <% Discount.all.each do |discount| %>
        <div class="button" id="discount_button_<%=discount.id%>" onclick="setDiscountVal(<%=discount.percent%>)">
          <div class="name">
            <%=discount.name%>
          </div>
          <div class="percent">
            <%=discount.percent%>%
          </div>
        </div>
      <% end %>
    </div>

    <div class="clear_top_margin_10">&nbsp;</div>

    <div id="manual_discount">
      <div class="header">Or Enter a Discount Amount</div>

      <div class="clear_top_margin_5">&nbsp;</div>

      <div class="fields">
        <div class="label">Amount:</div>
        <input type="text" class="percent" size="4" id="discount_percent_input"/>
      </div>
    </div>

    <div class="clear">&nbsp;</div>

    <div id="apply_discount_to">
      <div class="label">Apply Discount to:</div>

      <input type="radio" name="discount_type" value="whole_order" checked/>Whole Order
      <input type="radio" name="discount_type" value="last_item" checked/>Last Item
    </div>

    <div class="clear_top_margin_10">&nbsp;</div>

    <div class="actions">
      <div id="cancel_button" class="button" onclick="closeDiscountPopup()">Cancel</div>
      <div id="save_button" class="button" onclick="saveDiscount()">Save</div>
    </div>

  </div>
</div>

<div id="service_charge_popup_markup">
  <div id="service_charge_popup_markup_container">

    <div id="header">Enter Service Charge (CHANGE THIS TO DYNAMIC)</div>

    <div class="service_charge_popup_keypad_container">Keypad goes here</div>

    <div id="cancel_button" class="button" onclick="cancelServiceCharge()">Cancel</div>
    <div id="save_button" class="button" onclick="saveServiceCharge()">Save</div>
  </div>
</div>