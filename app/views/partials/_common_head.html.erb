<title>Pos</title>

<%= stylesheet_link_tag :all, :cache => true, :recursive => true %>

<!-- load the dynamic theme -->
<link type="text/css" href="<%= admin_custom_theme_path(:format => :css) %> " media="screen" rel="stylesheet" />

<%= javascript_include_tag "jquery.min", "jquery-ui.min", :cache => "jq" %>

<!--cant cache the following scripts as they are erb templates -->
<%= javascript_include_tag "init", "employees" %>

<%= javascript_include_tag "rails", "application", "iphone-style-checkboxes",
  "menu", "touch-scroll", "util", "jquery.cookie", "jquery.clock",
  "jquery.plugin.menuTree", "webkitdragdrop",
  "screen_button_functions", "jquery.bubblepopup", 
  "receipt_html_functions", "login_functions", "touch_util", 
  "cash_screen", "jquery-jvert-tabs-1.1.4", "cash_reports", 
  "keyboard", "dateFormat", "jquery.jplayer.min", "on_touch_click_replace", 
  "jquery.jscrollpane", "jquery.mousewheel", "jquery.bgiframe", 
  "jquery.mcdropdown", "jquery.ibutton", :cache => "libs" %>

<!-- Modal Popups (http://www.modalpopups.com) -->
<%= javascript_include_tag 'modal-popups/shCore', 'modal-popups/ModalPopups',
  'modal-popups/shBrushJScript', :cache => "modal_popups_libs" %>

<!-- only load the fingerprint libraries if the fingerprint has not yet been set -->
<% if !request.cookies["terminal_fingerprint"] %>
  <%= javascript_include_tag "md5", "detector", :cache => "fingerprint_libs" %>
<% end %>

<%= csrf_meta_tag %>

<% if params[:showfirebuglite] == "true" %>
  <!-- include firebug lite -->
  <script type="text/javascript" src="https://getfirebug.com/firebug-lite.js"></script>
<% end %>

<!-- must set some vars from the system settings -->
<%= render :partial => "/partials/js_global_settings" %>

<%= yield :head %>

<!-- disable the double tap to zoom -->
<meta name="viewport" content="user-scalable=0;" />

<meta http-equiv="pragma" content="no-cache"/>