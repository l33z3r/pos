<div id="admin_product_list">

  <section id="products">

    <h3>Products</h3>

    <div class="pagination_links">
      <div class="links">
        <%= will_paginate @products %>
      </div>
      <div class="info">
        <%= page_entries_info @posts %>
      </div>
    </div>

    <table id="product_list" style="display: none;">
      <thead>
        <tr>
          <th width="60">Image</th>
          <th width="160">Name</th>
          <th width="180">Brand</th>
          <th width="130">Category</th>
          <th width="60">Price</th>
          <th width="40">Size</th>
          <th width="40">Unit</th>
          <th width="70">Items per unit</th>
          <th width="80">Sales tax rate</th>
          <th width="50">Delete</th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td class="product_image">
              <%= link_to product_image_thumb(product, true), edit_admin_product_path(product) %>
            </td>
            <td><%= link_to product.name, edit_admin_product_path(product) %></td>
            <td><%= product.brand %></td>
            <td><%= link_to product.category.name, admin_category_path(product.category) if product.category %></td>
            <td>
              <div id="product_price_<%=product.id%>" ondblclick="updateProductPrice(<%=product.id%>, '<%=number_with_precision product.price, :precision => 2 %>')">
                <%= print_money product.price %>
              </div>
            </td>
            <td><%= product.size %></td>
            <td><%= product.unit %></td>
            <td><%= product.items_per_unit %></td>
            <td><%= number_to_percentage(product.sales_tax_rate, :precision => 0) %></td>
            <td><%= link_to "Delete", admin_product_path(product), :method => :delete, :confirm => "Are You Sure?" %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="clear_top_margin_20">&nbsp;</div>

    <div class="pagination_links">
      <div class="links">
        <%= will_paginate @products %>
      </div>
      <div class="info">
        <%= page_entries_info @posts %>
      </div>
    </div>

    <div id="actions">
      <%= button_to 'New Product', new_admin_product_path, :method => :get %>
    </div>

  </section>
</div>