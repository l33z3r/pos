<% 
@nav_title = "Roles" 
%>

<div id="admin_role_list">

  <section id="roles">

    <table id="role_list" class="admin_table">
      <thead>
        <tr>
          <th width="180">Name</th>
          <th width="50">Pin Required?</th>
          <th width="50">Login Allowed?</th>
        </tr>
      </thead>

      <tbody>
        <% @roles.each do |role| %>
          <tr>
            <td><%= link_to role.name, admin_role_path(role) %></td>
            <td>
              <%= check_box_tag "pin_required_#{role.name}", role.pin_required, role.pin_required,
                          :onchange => "toggleRolePinRequired(#{role.id}, this.checked);" %>
            </td>
            <td>
              <%= check_box_tag "login_allowed_#{role.name}", role.login_allowed, role.login_allowed,
                          :onchange => "toggleRoleLoginAllowed(#{role.id}, this.checked);" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br/>

    <div id="actions">
      <%= button_to 'New Role', new_admin_role_path, :method => :get %>
    </div>

  </section>
</div>