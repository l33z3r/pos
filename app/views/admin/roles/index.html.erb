<div id="admin_role_list">

  <section id="roles">

    <h3>Roles</h3>

    <table id="role_list" style="display: none;">
      <thead>
        <tr>
          <th width="180">Name</th>
        </tr>
      </thead>

      <tbody>
        <% @roles.each do |role| %>
          <tr>
            <td><%= link_to role.name, admin_role_path(role) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br />

    <div id="actions">
      <%= button_to 'New Role', new_admin_role_path, :method => :get %>
    </div>

  </section>
</div>