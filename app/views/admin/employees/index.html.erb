<% @nav_title = "Employees" %>

<% content_for :admin_subnav_links_left do %>
  <div class="button" data-onpress="goTo('<%= new_admin_employee_path %>');">
    <div class="icon">
      <%= image_tag "/images/button_logos/new_employee_button.png" %>
    </div>
    <div class="button_name">Add Employee</div>
  </div>

  <div class="button" data-onpress="goTo('<%= csv_import_admin_employees_path %>');">
    <div class="icon">
      <%= image_tag "/images/button_logos/import_employees_button.png" %>
    </div>
    <div class="button_name">Import Employees</div>
  </div>
<% end %>

<div id="admin_employee_list">

  <section id="employees">

    <div class="pagination_links">
      <div class="links">
        <%= will_paginate @employees %>
      </div>
    </div>

    <table class="admin_table" id="employee_list"">
           <thead>
        <tr>
          <th width="80">Avatar</th>
          <th width="25">ID</th>
          <th width="110">Name</th>
          <th width="80">Nickname</th>
          <th width="70">Pass Code</th>
          <th width="90">Role</th>
          <th width="110">Last Log In</th>
          <th width="110">Last Log Out</th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td class="avatar">
              <%= link_to employee_image_thumb(employee, true), edit_admin_employee_path(employee) %>
            </td>
            <td><%= employee.staff_id %></td>
            <td><%= link_to employee.name, edit_admin_employee_path(employee) %></td>
            <td><%= employee.nickname %></td>
            <td><%= employee.passcode %></td>
            <td><%= link_to employee.role.name, admin_role_path(employee.role) %></td>
            <td><%= employee.last_login.to_s(:short) %></td>
            <td><%= employee.last_logout.to_s(:short) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="clear_top_margin_20">&nbsp;</div>

    <div class="pagination_links">
      <div class="links">
        <%= will_paginate @employees %>
      </div>
      <div class="info">
        <%= page_entries_info @employees %>
      </div>
    </div>

  </section>
</div>
