<div id="user_nav">
  <% if current_cluey_account %>
    Logged in as <%= current_cluey_account.email %>.
    <%= link_to "Log out", account_log_out_path %>
  <% else %>
    <%= link_to "Sign up", account_sign_up_path %> or
    <%= link_to "log in", account_log_in_path %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>