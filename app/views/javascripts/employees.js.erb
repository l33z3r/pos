var employees = new Array();

<% Employee.all.each do |e|-%>
  employee_info = {
  id : '<%= e.id %>',
  nickname : '<%=h e.nickname %>',
  passcode : '<%= e.passcode %>',
  clockin_code : '<%= e.clockin_code %>',
  is_admin : <%= e.is_admin %>,
  role_id : <%= e.role.id %>,
  pin_required : <%= Role.find(e.role.id).pin_required ? "true" : "false" %>,
  clocked_in : <%= session[:active_employee_ids].include?(e.id) ? "true" : "false" %>
  }

  employees.push(employee_info);

<% end -%>