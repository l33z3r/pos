}

//hard code table -1 for previous Order
tables['-1'] = {
  id : '0',
  label : '0',
  room_id : '0'
}

//hard code table 0
tables['0'] = {
  id : '0',
  label : '0',
  room_id : '0'
}

<% current_outlet.table_infos.all.each do |ti|-%>
  table_info = {
    id : '<%= ti.id %>',
    label : '<%= ti.perm_id %>',
    room_id : '<%=ti.room_object.room_id%>'
  }

  tables['<%=ti.id%>'] = table_info;

<% end -%>

